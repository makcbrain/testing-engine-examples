{
	"name": "testing-engine-examples",
	"version": "1.0.0",
	"description": "Compare different test engines",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=engines/jest/jest.config.js",
		"test:bun": "bun test engines/bun/tests",
		"test:vitest": "vitest run --config=engines/vitest/vitest.config.ts",
		"lint": "bunx biome check --write",
		"typecheck": "bun tsc --noEmit",
		"precommit": "bun run lint && git add . && bun run typecheck",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/makcbrain/testing-engine-examples.git"
	},
	"author": "makc.brain@gmail.com",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/makcbrain/testing-engine-examples/issues"
	},
	"homepage": "https://github.com/makcbrain/testing-engine-examples#readme",
	"engines": {
		"bun": ">=1.0.0"
	},
	"dependencies": {
		"@biomejs/biome": "2.3.8",
		"@happy-dom/global-registrator": "20.0.11",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/react": "16.3.0",
		"@testing-library/user-event": "14.6.1",
		"@types/bun": "1.3.3",
		"@types/jest": "30.0.0",
		"@types/jsdom": "27.0.0",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitest/ui": "4.0.14",
		"happy-dom": "20.0.11",
		"husky": "9.1.7",
		"identity-obj-proxy": "3.0.0",
		"jest": "30.2.0",
		"jest-environment-jsdom": "30.2.0",
		"jsdom": "27.2.0",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"ts-jest": "29.4.5",
		"typescript": "5.9.3",
		"vitest": "4.0.14"
	}
}
